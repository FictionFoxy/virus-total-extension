{
  "manifest_version": 3,
  "name": "VirusTotal URL Scanner",
  "version": "1.0.0",
  "description": "Scan highlighted URLs with VirusTotal for security threats",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://your-backend-domain.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VirusTotal Scanner"
  },
  "web_accessible_resources": []
}
